<h1>FEED BEEFSQUATCH!</h1>

<table border=1>
    <tr>
        <th>
            <h2>Burgers!</h2>
        </th>
        <th>
            <h2>Devoured!</h2>
        </th>
    </tr>
    <tr>
        <td>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </td>
        <td>
            {{#each burgers}}
            {{#if devoured}}
            <div>
                {{burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </td>
    </tr>
</table>

<h2>Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="burgs">Burger Name:</label>
        <input type="text" id="burgs" name="burger_name">
    </div>

    <div class="form-group">
        <label for="hungry">Hungry?</label><br>
        <input type="radio" name="devoured" value="0" checked> Hungry!
    </div>

    <button type="submit">Get Burger</button>
</form>